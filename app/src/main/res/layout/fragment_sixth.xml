<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg6"
    tools:context="com.nerdspoint.android.promoter.fragments.Sixth">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:text="0 INR"
        android:id="@+id/spent_tv"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="40dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="How Much user do You want?"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="sans-serif-smallcaps"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="#33000000"
        android:layout_margin="5dp"
        android:orientation="vertical"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="#eeffffff"
            android:elevation="10dp"

            android:inputType="number"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint=" minimum 50 users"
            android:id="@+id/User_strength"
            android:textSize="18dp"
            android:textColor="#000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:id="@+id/states_LIST"
            android:layout_margin="40dp"
            android:text="Cost Per User is 1 indian Rupees"
            android:textColor="#fff"
            android:textSize="16dp"
            android:visibility="visible"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/previous"
                android:id="@+id/previous_btn"
                android:text="Previous"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@drawable/next"
                android:id="@+id/next_btn"
                android:text="Next"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
